<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#001941"
    tools:context="rts.pptviewer.MenuActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_am_item01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_weather"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/bt_am_item02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_restaurants"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/bt_am_item03"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_activities"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_am_item04"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_map"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/bt_am_item05"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_transportation"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/bt_am_item06"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_photos"
            android:layout_margin="8dp"/>

    </LinearLayout>

</LinearLayout>
